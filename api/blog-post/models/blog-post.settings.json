{
  "kind": "collectionType",
  "collectionName": "blog_posts",
  "info": {
    "name": "Blog Post",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "text": {
      "type": "richtext"
    },
    "Title": {
      "type": "string"
    },
    "Description": {
      "type": "text",
      "maxLength": 500
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "HeroImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "Slug": {
      "type": "uid"
    },
    "Hide": {
      "type": "boolean",
      "default": false
    },
    "postNumber": {
      "type": "integer"
    },
    "comments": {
      "via": "blog",
      "collection": "comments"
    },
    "BlogContent": {
      "type": "dynamiczone",
      "components": [
        "posts.blog-post-text",
        "posts.blog-post-image",
        "posts.affiliate-link"
      ]
    }
  }
}
